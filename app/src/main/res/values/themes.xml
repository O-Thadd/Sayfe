<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Sayfe" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:editTextColor">@android:color/white</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/dark_blue_color</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SearchAutoCompleteTextView" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="Theme.NavigationDrawerDemo.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.NavigationDrawerDemo.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />



    <style name="EditTextThemeOverlay" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@android:color/holo_blue_light</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@color/dark_blue_color</item>
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="customFAB" parent="Widget.Design.FloatingActionButton">
        <item name="backgroundTint">@color/blue_color</item>
        <item name="android:textColor">@color/white</item>
        <item name="fabCustomSize">45dp</item>

    </style>






</resources>